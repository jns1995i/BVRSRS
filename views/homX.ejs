<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REGISTRAR</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/color.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <link rel="stylesheet" href="/user.css">
    <link rel="icon" href="/images/clogo.png">
    <style>
        .userPhoto:hover {
            transform: scale(1.02);
        }
        .details {
            max-height: 0;
            overflow: hidden;
            opacity: 0;
            transition: max-height 0.6s ease-in-out, opacity 0.8s ease-in-out, padding 0.4s ease-in-out;
            white-space: pre-line;
        }

        .details.show {
            max-height: fit-content;
            opacity: 1;
            padding: 10px 0;
        }

        .newsCard {
            transition: all 0.8s ease-in-out;
        }
        video {
            display: block;
            margin: 20px auto;
            border: 0.5px solid white;
            border-radius: 10px;
            box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
        }
        .reqCard {
            border-radius: 20px !important;
        }
        
        #reqSec {
        display: flex;
        overflow-x: auto;
        white-space: nowrap;
        gap: 20px;
        padding: 15px 0;
        justify-content: start;
        scroll-snap-type: x mandatory;
        border: 1px solid rgba(255, 255, 255, 0);
        border-radius: 10px;
        }
        
        .reqCardM {
            flex: 0 0 auto;
            min-width: 200px;
            padding: 20px;
            width: 265px;
        }
        #assignDepCard {
            max-width: 0;
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: max-height 0.9s ease, opacity 0.6s ease;
        }
        #assignDepCard.active {
            margin-bottom: 150px;
            max-width: 100%;
            max-height: 100%;
            opacity: 1;
            padding: 0;
        }
        .unseen {
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: max-height 0.9s ease, opacity 0.6s ease;
        }
        .seen {
            max-height: 300px;
            opacity: 1;
            padding: 0;
            transition: max-height 0.9s ease, opacity 0.6s ease;
        }
        textarea {
            background-color: white;
        }

    </style>
</head>
<body class="block colorPrimary padding15">
    <div class="headf height10 borderRadius20">
        <div class="width45 justifyStart paddingInline20 gap10">
            <a href="/hom" class="userPhoto transition h50 bgWhite padding0 borderRadius500"><img src="/images/logo.jpg" alt="" class="height100"></a>
            <p class="size24 str400 upperCase colorPrimary">BVRSRS</p>
        </div>
        <div class="width55">
            <div class="width35 justifyEnd paddingInline10 gap10">
            </div>
            <div class="width65 height100 justifyEnd paddingRight10 gap5">
                <a href="javascript:void()" class="nav headf" id="assignBtn"><i class="fas fa-plus"></i>Request Document</a>
                <a href="/design" class="nav headf" id=""><i class="fas fa-phone"></i>Hotlines</a>
                <span class="flex justifyStart height100 padding5 alignCenter gap10">
                    <a href="/prf" class="userPhoto transition borderPrimary borderRadius500">
                        <img src="<%= user.photo ? user.photo : '/images/profile.jpg' %>" 
                        alt="User Photo" 
                        class="borderRadius500 h40" 
                        onerror="this.onerror=null; this.src='/images/profile.jpg';">
                    </a>
                    <a href="/" class="nav"><i class="fas fa-sign-out"></i>Logout</a>
                    <div class="height100 width0 col alignStart hidden">
                        <p class="size16 str500 lineHeight1 upperCase"><%= user.firstName %> <%= user.lastName %> <%= user.extName %></p>
                        <p class="size12 str400 lineHeight1"><%= user.role %></p>
                    </div>
                </span>
            </div>
        </div>
    </div>
    <div class="height90 block alignStart overflow-y1 abstractBG borderRadius15" id="assignDepCard" style="overflow-y: auto !important;">
        <div class="height0 padding20">
            <form action="/reqDocument" method="POST" enctype="application/x-www-form-urlencoded" class="width40 height0 padding20 bgWhite borderRadius20  marginBottom60">
                <p class="size28 str500 colorPrimary">REQUEST FORM</p>
                <div class="fieldsetsContainer col height0 padding0 width100" id="fieldsetsContainer">
                    <fieldset class="marginBottom20 bgLightgray borderPrimary">
                        <div class="height0 justifyEnd" id="removeBtnContainer">
                            <button type="button" class="remove-btn">Remove</button>
                        </div>
                        <div class="field">
                            <label>Document Type</label>
                            <div class="selectBar">
                                <select name="type[]" required class="docType">
                                    <option value="" selected disabled>Select</option>
                                    <option value="Barangay Clearance">Barangay Clearance</option>
                                    <option value="Barangay Indigency">Barangay Indigency</option>
                                    <option value="Good Moral">Good Moral</option>
                                    <option value="Certificate of Residency">Certificate of Residency</option>
                                    <option value="Certification (Customizable)">Certification (Customizable)</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="row gap10">
                            <div class="field width40">
                                <label>No. Copies</label>
                                <div class="selectBar">
                                    <select name="qty[]" required>
                                        <option value="" selected disabled>Select</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                </div>
                            </div>
                            <div class="field width60">
                                <label>Purpose</label>
                                <div class="selectBar">
                                    <select name="purpose[]" required>
                                        <option value="" selected disabled>Select</option>
                                        <option value="ANY LEGAL">ANY LEGAL</option>
                                        <option value="BURIAL ASSISTANCE">BURIAL ASSISTANCE</option>
                                        <option value="EDUCATIONAL ASSISTANCE">EDUCATIONAL ASSISTANCE</option>
                                        <option value="FINANCIAL ASSISTANCE">FINANCIAL ASSISTANCE</option>
                                        <option value="MEDICAL ASSISTANCE">MEDICAL ASSISTANCE</option>
                                        <option value="BANK TRANSACTION">BANK TRANSACTION</option>
                                        <option value="BOARD EXAM">BOARD EXAM</option>
                                        <option value="CELCOR/ELECTRIC METER">CELCOR/ELECTRIC METER</option>
                                        <option value="LCR">LCR</option>
                                        <option value="LEGALIZATION">LEGALIZATION</option>
                                        <option value="LOCAL EMPLOYMENT">LOCAL EMPLOYMENT</option>
                                        <option value="PHILHEALTH">PHILHEALTH</option>
                                        <option value="POLICE CLEARANCE">POLICE CLEARANCE</option>
                                        <option value="PRIME WATER">PRIME WATER</option>
                                        <option value="SCHOOL REQUIREMENT">SCHOOL REQUIREMENT</option>
                                        <option value="SENIOR CITIZEN">SENIOR CITIZEN</option>
                                        <option value="SOLO PARENT PWD">SOLO PARENT PWD</option>
                                        <option value="TRAVEL ABROAD">TRAVEL ABROAD</option>
                                        <option value="XXX">XXX</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="height0 col alignStart unseen" id="purposeCard">
                            <label for="">Indicates here the content</label>
                            <textarea placeholder="e.g. This is to certify that Juan dela Cruz is a solo parent." name="remarks[]"></textarea>
                        </div>                        
                    </fieldset>
                    
                    <div class="height0 justifyStart">
                        <a href="#" class="nav pnav tnav" id="addBtn">Additional</a>
                    </div><script>
                        // Get the add button
                        const addBtn = document.getElementById('addBtn');
                    
                        // Function to handle "Certification (Customizable)" selection
                        const togglePurposeCard = (selectElement) => {
                            const purposeCard = selectElement.closest('fieldset').querySelector('#purposeCard');
                            if (selectElement.value === "Certification (Customizable)") {
                                purposeCard.classList.remove("unseen");
                                purposeCard.classList.add("seen");
                            } else {
                                purposeCard.classList.remove("seen");
                                purposeCard.classList.add("unseen");
                            }
                        };
                    
                        // Add event listener for when the document type changes in the first fieldset
                        const firstDocType = document.querySelector('.docType');
                        if (firstDocType) {
                            firstDocType.addEventListener("change", function() {
                                togglePurposeCard(this);
                            });
                        }
                    
                        // Add event listener to the "Add" button to add new fieldsets
                        addBtn.addEventListener('click', function(e) {
                            e.preventDefault();  // Prevent default action
                    
                            // Clone the first fieldset (can be generalized to other fieldsets if needed)
                            const firstFieldset = document.querySelector('fieldset');
                            const newFieldset = firstFieldset.cloneNode(true);
                    
                            // Ensure cloned fieldset has the correct name attributes (type[], qty[], purpose[], remarks[])
                            const selectElements = newFieldset.querySelectorAll('select');
                            selectElements.forEach((select, index) => {
                                select.selectedIndex = 0;  // Reset selections
                                select.name = select.name.replace(/\[\]$/, `[${index}]`);  // Adjust the index in the name attribute
                            });
                    
                            const inputElements = newFieldset.querySelectorAll('input');
                            inputElements.forEach(input => {
                                if (input.type === 'number') {
                                    input.name = input.name.replace(/\[\]$/, `[${index}]`);  // Adjust the index for qty
                                } else if (input.type === 'text') {
                                    if (input.placeholder === "Purpose") {
                                        input.name = input.name.replace(/\[\]$/, `[${index}]`);  // Adjust the index for purpose
                                    } else if (input.placeholder === "Remarks") {
                                        input.name = input.name.replace(/\[\]$/, `[${index}]`);  // Adjust the index for remarks
                                    }
                                }
                            });
                    
                            // Add the new fieldset to the DOM (append after the current one)
                            document.querySelector('.height0.justifyStart').insertAdjacentElement('beforebegin', newFieldset);
                    
                            // Ensure the "Remove" button is displayed in the new fieldset
                            const removeBtn = newFieldset.querySelector('.remove-btn');
                            if (removeBtn) {
                                removeBtn.style.display = 'inline-block';
                                removeBtn.classList.add('nav', 'tnav', 'dnav');
                                removeBtn.addEventListener('click', function() {
                                    newFieldset.remove(); // Remove the fieldset when clicked
                                });
                            }
                    
                            // Add event listener to the docType in the new fieldset
                            const newDocType = newFieldset.querySelector('.docType');
                            if (newDocType) {
                                newDocType.addEventListener("change", function() {
                                    togglePurposeCard(this);
                                });
                            }
                        });
                    
                        // Make sure the first fieldset doesn't have a remove button and can't be removed
                        const firstRemoveBtn = document.querySelector('.remove-btn');
                        if (firstRemoveBtn) {
                            firstRemoveBtn.style.display = 'none';  // Hide the remove button for the first fieldset
                        }
                    </script>
                                   
                </div>
                <br>
                <div class="noteCard textCenter">
                    TAKE NOTE: Please review all the details carefully before submitting your request. Ensure that all selections and information are correct, as changes may not be allowed after submission.
                </div>
                <div class="field height0 marginTop15 width100 alignEnd">
                    <button type="submit" class="nav tnav pnav"><i class="fas fa-check-circle"></i>Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="mainf height85 padding10 gap20 borderRadius15 abstractBG">
        <div class="col alignStart gap20 width50 justifyStart">
            <div class="height0 width100 padding20 borderRadius10 col alignStart" style="border: 1px solid white;">
                <% if (requests.length < 0) { %>
                <div class="height0 width100 justifyBetween">
                    <p class="size24 str500 white">RECENT REQUESTS</p>
                    <a href="/reqHis" class="tnav white">See All Previous <i class="fas fa-chevron-right"></i></a>
                </div>
                <% } %>
                <div class="inline width100 height0 gap20 padding5 overflow-x1" id="reqSec">
                    <% if (requests.length > 0) { %>
                    <% requests.forEach(request => { %>
                        <div class="card reqCard reqCardM">
                            <a href="/reqView/<%= request.id %>" class="nav cnav pnav absolute top10 right10"><i class="bi bi-arrow-up-right"></i></a>
                            <p class="size14">
                                <%= new Date(request.createdAt).toLocaleString('en-US', { month: 'short', day: '2-digit' }) %> 
                                <%= new Date(request.createdAt).getFullYear() %> 
                                &bull; <%= new Date(request.createdAt).toLocaleString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                            </p>
                            <p class="size16 str400"><i class="fas fa-receipt size16"></i> <%= request.tr %></p>
                            <br>
                            <p class="size12 str300"><%= request.type %></p>
                            <p class="size12 str300"><%= request.qty %> <%= request.qty == 1 ? 'Copy' : 'Copies' %> for <%= request.purpose %></p>
                            <br>
                            <a href="" class="nav tnav snav disabled size14 padding5"><%= request.status %></a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="size14 str400 textCenter white">No Recent or Active Requests as of Now</p>
                <% } %>
                
                </div>
            </div>
            
            <div class="height50 width100 white alignCenter gap10">
                <div class="height0 col padding0 alignStart width40 card padding20 colorPrimary">
                    <p class="marginLeft10 size18 str500">NEED HELP?</p>
                    <br>
                    <hr>
                    <a href="/ins" class="nav border0">How to Request Document?<i class="fas fa-chevron-right"></i></a>
                    <hr>
                    <a href="/pay" class="nav border0">How to PAY ONLINE?<i class="fas fa-chevron-right"></i></a>
                    <hr>
                </div>
                <video autoplay muted controls loop width="500" class="width60">
                    <source src="/images/mv.mp4" type="video/mp4">
                    <source src="/images/mv.webm" type="video/webm">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
        <div class="block justifyCenter gap20 overflow-y1 paddingBlock10 width50 borderRadius10 paddingInline100">
            <div class="height0 width100 justifyBetween">
                <p class="size30 str400 white">What's New?</p>
                <span class="flex justifyStart alignCenter gap0 snav paddingInline20 paddingBlock5 borderRadius15">
                    <i class="fas fa-search" style="font-size: 12px;"></i>
                    <input type="search" id="univ" class="border0 width0" placeholder="Search news here ..">
                </span>
            </div>
            <br>
            <div id="notFound" class="reqCard size20 height0 width100 padding30 borderRadius10 hidden">Sorry, No record Found!</div>
            <% const formatDate = (date) => {
                const currentDate = new Date();
                const diffInTime = currentDate.getTime() - date.getTime();
                const diffInDays = Math.floor(diffInTime / (1000 * 3600 * 24)); // Difference in days
            
                const options = { year: 'numeric', month: 'short', day: 'numeric' };
                const formattedDate = date.toLocaleString('en-US', options); // Only date part
                const timeOptions = { hour: 'numeric', minute: 'numeric', hour12: true }; // Only time part
                const formattedTime = date.toLocaleString('en-US', timeOptions);  // Only time part
            
                if (diffInDays === 0) {
                    return `Today • ${formattedDate} - ${formattedTime}`; // Dash separator for today
                } else if (diffInDays === 1) {
                    return `Yesterday • ${formattedDate} - ${formattedTime}`; // Dash separator for yesterday
                } else {
                    const dayName = date.toLocaleString('en-US', { weekday: 'long' });
                    return `${dayName} • ${formattedDate} - ${formattedTime}`; // Dash separator for other days
                }
            } %>

            <% announcements.forEach(announcement => { %>
                <div class="card height0 col alignStart gap0 marginBottom20 newsCard darkShadow padding20" id="newsCard" id="announcement-<%= announcement.id %>">
                    <a href="" class="nav absolute top5 right5 border0 showBtn"><i class="fas fa-chevron-down"></i> Details</a>
                    <p class="size14 str400 marginBottom15"><%= formatDate(new Date(announcement.createdAt)) %></p>
                    <p class="size26 str500 width100 borderRadius5 padding10 colorPrimary"><%= announcement.title %></p>
                    <p class="size12 str400 details black" id="details"><%= announcement.description %></p><% if (announcement.image) { %>
                        <% if (announcement.image.endsWith('.mp4') || announcement.image.endsWith('.webm') || announcement.image.endsWith('.ogg')) { %>
                            <video class="width100 borderRadius5 marginTop5">
                                <source src="<%= announcement.image %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        <% } else { %>
                            <img src="<%= announcement.image %>" 
                                alt="User Photo" 
                                class="width100 height0 borderRadius5 marginTop5" 
                                onerror="this.onerror=null; this.src='/images/ann2.jpg';">
                        <% } %>
                    <% } else { %>
                        <img src="/images/ann2.jpg" 
                            alt="Default Announcement" 
                            class="width100 height0 borderRadius5 marginTop5">
                    <% } %>
                    
                </div>
            <% }) %>
        </div>
    </div>
    <div class="height10 alignStart padding15">
        <p class="size14 str400">Need help in requesting document? Proceed <a href="/ins" class="inline str500">HERE</a></p>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll(".showBtn").forEach(button => {
            button.addEventListener("click", function(event) {
                event.preventDefault(); // Prevent default <a> behavior
    
                let newsCard = this.closest(".newsCard"); // Get parent newsCard
                let details = newsCard.querySelector(".details"); // Get details inside the card
                let icon = this.querySelector("i"); // Get icon inside the button
    
                details.classList.toggle("show"); // Toggle visibility
                
                // Toggle icon class
                if (details.classList.contains("show")) {
                    icon.classList.remove("fa-chevron-down");
                    icon.classList.add("fa-chevron-up");
                } else {
                    icon.classList.remove("fa-chevron-up");
                    icon.classList.add("fa-chevron-down");
                }
            });
        });
    });
    
    </script>
    <script>
        document.getElementById("univ").addEventListener("input", function () {
    let filter = this.value.toLowerCase();
    let newsCards = document.querySelectorAll(".newsCard");
    let found = false;

    // If the search field is empty, show all cards and hide "NOT FOUND"
    if (filter === "") {
        newsCards.forEach(card => card.style.display = "block");
        document.getElementById("notFound").style.display = "none";
        return;
    }

    // Hide cards that don't match the filter and show matching ones
    newsCards.forEach(card => {
        if (card.textContent.toLowerCase().includes(filter)) {
            card.style.display = "flex";
            found = true;
        } else {
            card.style.display = "none";
        }
    });

    // Show "NOT FOUND" if no matches are found
    document.getElementById("notFound").style.display = found ? "none" : "flex";
});

    </script>
<script>
    document.querySelectorAll('.details').forEach(div => {
    div.innerHTML = div.innerHTML.replace(/(?<!\S)(https?:\/\/[^\s]+|www\.[^\s]+|\b[a-zA-Z0-9.-]+\.(com|net|org|gov|edu|ph)\b)(?!\S)/g, '<a href="http://$1" target="_blank" class="inline blue str500">$1</a>');
});
</script>
<script>
    document.querySelectorAll('.details').forEach(div => {
    div.innerHTML = div.innerHTML.replace(/(^|\s)(#\w+)/g, '$1<span class="green str500">$2</span>');
});
</script>

<script>
    document.getElementById("assignBtn").addEventListener("click", function(event) {
        event.preventDefault(); // Prevent default link behavior
        
        let assignCard = document.getElementById("assignDepCard");
        let assignBtn = document.getElementById("assignBtn");

        // Toggle 'active' class
        assignCard.classList.toggle("active");

        // Change button text & icon based on active state
        if (assignCard.classList.contains("active")) {
            assignBtn.innerHTML = '<i class="fas fa-times"></i> Close Form';
        } else {
            assignBtn.innerHTML = '<i class="fas fa-plus"></i>Request Document';
        }
    });
</script>

    
</body>
</html>