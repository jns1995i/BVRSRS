<head>
    <title>Downloading...</title>
    <script>
        window.onload = function () {
            const link = document.createElement("a");
            link.href = "/download-residents"; // Your file download route
            link.download = "residents.xlsx";
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // Ensure all elements remain interactive
            setTimeout(() => {
                window.location.href = "/rsd"; // Redirect after 3 seconds
            }, 1000);
        };
    </script>
    <style>
    </style>
</head>
