<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bar Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
        canvas {
            width: 100% !important;
            height: 300px !important;
        }
    </style>
</head>
<body>
    <canvas id="myBarChart"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
document.addEventListener("DOMContentLoaded", async () => {
    try {
        // Fetch data from API
        const response = await fetch("/api/success-per-month");
        const data = await response.json();

        console.log("Monthly Success Data:", data.monthlySuccess);
        console.log("Total Requests:", data.totalRequests); // Debugging

        if (!data || !Array.isArray(data.monthlySuccess)) {
            throw new Error("Invalid data format received");
        }

        const ctx = document.getElementById('myBarChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'],
                datasets: [{
                    label: 'Issued Documents',
                    data: data.monthlySuccess,
                    backgroundColor: '#083a3c',
                    borderColor: 'transparent',
                    borderWidth: 0,
                    borderRadius: 10,
                }],
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    x: { grid: { display: false } },
                    y: { 
                        beginAtZero: true, 
                        suggestedMax: data.totalRequests || 100, // Set max dynamically 
                        grid: { display: false } 
                    }
                },
                responsive: true,
                plugins: { legend: { display: false, position: 'top' } }
            }
        });

    } catch (error) {
        console.error("Error fetching or processing data:", error);
    }
});

    </script>
    
    
        
</body>
</html>
