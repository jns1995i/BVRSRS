<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pie Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }
        canvas {
            max-width: 600px;
        }
    </style>
</head>
<body>
    <canvas id="genderChart" width="400" height="400"></canvas>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const ctx = document.getElementById('genderChart').getContext('2d');
    
            new Chart(ctx, {
                type: 'doughnut', // Ensure 'doughnut' type is set
                data: {
                    labels: ['Male', 'Female'],
                    datasets: [{
                        label: 'Gender Distribution',
                        data: [<%= maleCount %>, <%= femaleCount %>], // Dynamic values
                        backgroundColor: ['#0d2b24', '#1d4e37'], // Darker green shades
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    cutout: '70%', // Ensure this is set (Higher value = Thinner ring)
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    }
                }
            });
        });
    </script>
    
</body>
</html>
