                    %>
            
                    <% if (hasBarangayClearance) { %>
                        <tr>
                            <td>
                                <%= new Date(request.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'short', 
                                    day: '2-digit' 
                                }) + ' • ' + new Date(request.createdAt).toLocaleTimeString('en-US', { 
                                    hour: 'numeric', 
                                    minute: '2-digit', 
                                    hour12: true 
                                }) %>
